    font-family:Georgia;


    
    }
</style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login Page</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>

<body style="background-image: url('/Product_images/Login.jpg'); background-size: cover; ">

@*<body background="~/Product_images/Login.jpg" >*@
    
    @using(Html.BeginForm("Login","Home"))
    { 
    <div align="center">

       
        <table style="background-color:transparent; align-content: center; vertical-align: middle; width: auto; border: none;">

            <tr>
                <td colspan="4" style="font-size: 70px;width:auto;align-content:center; font-weight:900;color:red">
                    Welcome To  E-Shopping Portal
                </td>
            </tr>
            </table>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />



        <table class="abc" align="right" style="background-color: transparent; align-content: center; vertical-align: middle; width: auto; border: none;">

            <tr>
                <td style="align-content:center;font-size:30px;font-weight:900">
                    Login
                </td>
            </tr>
            <tr>
                <td>
                    <br />

                </td>
            </tr>
            <tr>
                <td>
                    Email Id:
                </td>
                <td  style="font-size:x-large">
                    @Html.TextBox("CustomerEmailId", "")
                </td>
            </tr>
            <tr>
                <td>
                    <br />

                </td>
            </tr>
            <tr>
                <td>
                    
                    Password:
                </td>
                <td style="font-size:x-large">
                    @Html.Password("CustomerPassword", "")
                </td>
            </tr>
            <tr>
                <td>
                    <br />

                </td>
            </tr>
            <tr>
                <td>
                 
                    Rememberme
                </td>
                <td>
                    @Html.CheckBox("rememberme", "false")
                </td>
            </tr>
            <tr>
                <td>
                    <br />

                </td>
            </tr>

            <tr>
                <td>
                    <br />
                    <input type="submit" value="Login"  style="background-color:blue ; color: white; font-size: xx-large; font-weight: 800; font-family: Georgia; width: 120px; height: 50px"/>
                </td>
                <td>
                    @ViewBag.msg1
                </td>
            </tr>
            <tr>
                <td align="center">
                    <br />
                    <br />
                    
                   

                    <input type="button" value="Sign Up" onclick="location.href='@Url.Action("Newcustomer", "Home")'" style="background-color:darkblue;width:250px;height:50px;color:white;font-size:xx-large;font-weight:800;font-family:Georgia" />

                    <br />
                    <br />
                
                </td>
                <tr>
                <td>
                    <input type="button" value="Admin Login" onclick="location.href='@Url.Action("Adminlogin", "Home")'" style="background-color: darkblue; width: 250px; height: 50px; color: white; font-size: xx-large; font-weight: 800; font-family: Georgia" />
                    <br />
                    <br />
                    
                </td>
                    </tr>
            <tr>
                
                <td>
                    <input type="button" value="Delivery Login" onclick="location.href='@Url.Action("Deliverylogin", "Home")'" style="background-color: darkblue; width: 250px; height: 50px;color:white; font-size: xx-large; font-weight: 800; font-family: Georgia" />
                </td>

            </tr>
        </table>
        
       
           


    
        
    </div>
    }
</body>
</html>
